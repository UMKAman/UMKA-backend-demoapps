<!--сама специализация-->
<script type="text/template" id="specTemplate">
    <img class="card-img-top img-fluid specializationPic" src="{{= pic }}" alt="">
    <div class="card-block text-xs-left">
        <h4 class="card-title name">{{= name }}</h4>
    </div>
    <div class="flex-row d-flex justify-content-around">
        <div class="btn btn-primary edit"><i class="fa fa-pencil" aria-hidden="true"></i></div>
        <div class="btn btn-danger remove"><i class="fa fa-remove" aria-hidden="true"></i></div>
    </div>
</script>

<!--форма создания/изменения специализации-->
<script type="text/template" id="specAddEditTemplate">
    <img class="card-img-top img-fluid" src="{{= pic }}" alt="">
    <div class="card-block center">
        <h4 class="card-title">
            <div class="form-group">
                <input type="text" class="form-control name" value="{{= name }}">
            </div>
        </h4>
        <p class="card-text">
            <div class="form-group">
                <input type="file" class="form-control-file pic">
            </div>
            <div class="form-group">
              <input type="text" class="form-control color" aria-describedby="helpId">
            </div>
        </p>
        <div class="d-flex justify-content-between">
            <div class="btn btn-success save"><i class="fa fa-check" aria-hidden="true"></i></div>
            <div class="btn btn-danger cancel"><i class="fa fa-remove" aria-hidden="true"></i></div>
        </div>
    </div>
</script>